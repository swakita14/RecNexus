@model DiscussionHub.Models.ViewModels.CreateDiscussionViewModel

@{
    ViewBag.Title = "Post a New Discussion";
}

<h2>Post a New Discussion</h2>

@using (Html.BeginForm("Create", "Discussions", FormMethod.Post))
{
    <form>
        @Html.HiddenFor(model => model.UserId)
        <div class="row">
            <div class="form-group col-md-6">
                @Html.DisplayNameFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new {@class = "form-control", placeholder = "Title"})
                @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                @Html.DisplayNameFor(model => model.ArticleLink)
                @Html.TextBoxFor(model => model.ArticleLink, new {@class = "form-control", placeholder = "Article Link"})
                @Html.ValidationMessageFor(model => model.ArticleLink, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                @Html.DisplayNameFor(model => model.Contents)
                @Html.TextAreaFor(model => model.Contents, new {@class = "form-control", rows = 5, placeholder = "Leave your opinions, feedback, comments about the article here!"})
                @Html.ValidationMessageFor(model => model.Contents, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3">
                <button type="submit" class="btn btn-outline-dark">Submit Discussion</button>
            </div>
        </div>
    </form>
}
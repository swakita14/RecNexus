@using PickUpSports.Models
@model PickUpSports.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

<div class="container">
    <div class="row">
        <div class="form-box">
            <h2>@ViewBag.Title</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    if (!ViewData.ModelState.IsValid)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(false, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    }

                    <div class="form-group">
                        <div class="col-md-12">

                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", id = "formField", placeholder = "Email Address"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", id = "formField", placeholder = "First Name"})
                        </div>
                    </div>
                <div class="form-group">

                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.LastName, new {@class = "form-control", id = "formField", placeholder = "Last Name"})

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Username, new {@class = "form-control", id = "formField", placeholder = "Username"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", id = "password", title = "Passwords must have at least one non-letter or digit character.\nPasswords must have at least one digit (\'0\' - \'9\').", placeholder = "Password"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", id = "formField", placeholder = "Confirm Password"})
                        </div>
                    </div>

                    <div class="form-group">
                        <center>
                            <div class="g-recaptcha" data-sitekey="6LeQnpIUAAAAAHRXhsBeUHrT15dV6K3AG3PwKBLr"></div>

                        </center>
                    </div>
                    <div class="form-group">
                        <center>
                            <input type="submit" class="btn btn-default" id="submit" value="Register" />
                        </center>
                    </div>

                    <hr/>
                    <div class="form-group">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel {ReturnUrl = ViewBag.ReturnUrl})
                    </div>
                }
                


            </section>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function(){
            $('#password').tooltip();
        });
    </script>
}


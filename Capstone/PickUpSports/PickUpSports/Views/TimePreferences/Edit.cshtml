@model PickUpSports.Models.ViewModel.ContactController.CreateTimePreferenceViewModel

@{
    ViewBag.Title = "Edit";
}
<br /><br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="well">                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.TimePrefID)
                    
                    <h4>
                        Edit Your Time Preferences
                        </h4><div class="form-group">
                        <label class="control-label col-sm-3" for="email">Select Day of Week:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                            @Html.DropDownList("DayOfWeek", new SelectList(Enum.GetValues(typeof(DayOfWeek))), "Select Day of Week", new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DayOfWeek, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="email">Beginning Time:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </div>
                            @Html.EditorFor(model => model.BeginTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Begin Time", @required = "required" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.BeginTime, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="email">Ending Time:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </div>
                            @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter End Time", @required = "required" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
}

<p>
    <center>
        @Html.ActionLink("Back to Account Detail", "../Contact/Details")
    </center>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model PickUpSports.Models.ViewModel.CreateTimePreferenceViewModel
@{
    ViewBag.Title = "Create";
}

<br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="well well-sm">

                <fieldset>
                    <legend class="text-center header">Add New Time Preference</legend>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="day">Select Day of Week:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </div>
                            @Html.DropDownList("DayOfWeek", new SelectList(Enum.GetValues(typeof(DayOfWeek))), "Select Day of Week", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="btime">Beginning Time:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </div>
                            @Html.EditorFor(model => model.BeginTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Begin Time", @required = "required" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.BeginTime, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="etime">Ending Time:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </div>
                            @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter End Time", @required = "required" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List of Time Preferences", "Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model List<PickUpSports.Models.ViewModel.GameController.GameListViewModel>

@section Scripts
{
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="../../Scripts/gameView.js"></script>
}

<div class="form-box">
    <h1>Open Games</h1>
    <ul class="rolldown-list" id="myList">
        <li>
            @foreach (var game in Model)
            {
                <div class="container">
                    <div class="row">
                        @Html.DisplayFor(model => game.Sport) at @Html.DisplayFor(model => game.Venue)
                    </div>
                    <div class="row">
                        @Html.DisplayFor(model => game.StartDate) to @Html.DisplayFor(model => game.EndDate)
                    </div>
                    <div class="row">
                        Game started by @Html.DisplayFor(model => game.ContactName)
                    </div>


                    <div class="row">
                        <br />@Html.ActionLink("Click here for more details on game", "GameDetails", new { id = game.GameId })
                    </div>

                </div>
                <hr />
            }
        </li>
    </ul>
</div>

@using (Html.BeginForm("TimeFilter", "Game", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="submit" value="Games During My Time" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}
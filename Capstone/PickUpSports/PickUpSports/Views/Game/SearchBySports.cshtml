@model PickUpSports.Models.ViewModel.GameBySportViewModel
@{
    ViewBag.Title = "SearchGameBySports";
}
@using (Html.BeginForm("SearchBySports", "Game", FormMethod.Post))
{
    <div class="row">
        
        <div class="col-md-12">
            <h2>Select Sports:</h2>
            <form>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SportId, Model.Sports, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>                
            </form>                       
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <div class="col-md-12">
        <div class="row">
            <div class="well well-sm">

                <fieldset>
                    <legend class="text-center header">List of Games:</legend>

                    <dt>
                        Contact Person:
                        Venue Name:
                        Start Time:
                        End Time:
                        Game Status:
                    </dt>
                    @for (int i = 0; i < Model.GameId.Count(); i++)
                    {
                        <dd>
                            @Model.ContactName.GetRange(i, 1).First()
                            @Model.VenueName.GetRange(i, 1).First()
                            @Model.StartTime.GetRange(i, 1).First()
                            @Model.EndTime.GetRange(i, 1).First()
                            @Model.GameStatus.GetRange(i, 1).First()
                        </dd>
                    }
                </fieldset>

            </div>
        </div>
    </div>
}




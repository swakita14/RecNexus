@model PickUpSports.Models.DatabaseModels.Contact

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="well well-sm">

            <fieldset>
                <legend class="text-center header">Your Current Information</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.Username):
                    @Html.DisplayFor(model => model.Username)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName):
                    @Html.DisplayFor(model => model.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email):
                    @Html.DisplayFor(model => model.Email)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Address1):
                    @Html.DisplayFor(model => model.Address1)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Address2):
                    @Html.DisplayFor(model => model.Address2)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.City):
                    @Html.DisplayFor(model => model.City)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.State):
                    @Html.DisplayFor(model => model.State)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ZipCode):
                    @Html.DisplayFor(model => model.ZipCode)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber):
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </fieldset>
            @Html.HiddenFor(model => model.ContactId)

        </div>
    </div>
</div>

<p>
    <center>
        <input type="button" class="btn btn-default" value="Edit Information" onclick="location.href='@Url.Action("Edit", "Contact", new { id = Model.ContactId})'" />
        &nbsp;
        <input type="button" class="btn btn-default" value="Change Password" onclick="location.href='@Url.Action("ChangePassword", "Manage")'" />
        &nbsp;
        <input type="button" class="btn btn-default" value="Manage Time Preferences" onclick="location.href = '@Url.Action("Details", "TimePreferences")'" />
        &nbsp;
        <input type="button" class="btn btn-default" value="Manage Sport Preferences" onclick="location.href='@Url.Action("Details", "SportPreferences")'" />
        &nbsp;
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm">Delete Account</button>
    </center>
</p>

@using (Html.BeginForm("Delete", "Contact", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ContactId)

    <!-- Modal -->
    <div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-labelledby="confirmRemove" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmRemove">Confirm Deletion</h5>
                </div>
                <div class="modal-body">
                    Please confirm that you want to delete your account <b>permanently</b>.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" name="Button">Yes, delete my account.</button>
                </div>
            </div>
        </div>
    </div>
}

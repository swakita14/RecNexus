@model PickUpSports.Models.ViewModel.ContactController.EditContactViewModel

@{
    ViewBag.Title = "Edit Your Information";
}



@using (Html.BeginForm("Edit", "Contact", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="form-box">
                <h2>Edit Your Information</h2>
                <form role="form" id="game-form">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(false, null, new { @class = "text-danger" })

                            </div>
                        </div>
                    }
                    
                    @Html.HiddenFor(x => x.ContactId)
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </div>
                            <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" placeholder="First Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </div>
                            <input type="text" class="form-control" name="LastName" value="@Model.LastName" placeholder="Last Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </div>
                            <input type="text" class="form-control" name="Email" value="@Model.Email" placeholder="Email Address">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-earphone"></span>
                            </div>
                            <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Phone Number">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-home"></span>
                            </div>
                            <input type="text" class="form-control" name="Address1" value="@Model.Address1" placeholder="Address Line 1">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-home"></span>
                            </div>
                            <input type="text" class="form-control" name="Address2" value="@Model.Address2" placeholder="Address Line 2">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="City" value="@Model.City" placeholder="City">
                            </div>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(
                                    x => x.State,
                                    new SelectList(ViewBag.States, "Key", "Value"),
                                    "State",
                                    new {@class = "form-control"})
                            </div>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="ZipCode" value="@Model.ZipCode" placeholder="Zip Code">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <center>
                            @Html.CheckBoxFor(x => x.HasPublicProfile) Check box to make profile public

                        </center>                    
                        </div>

                    <div class="form-group">
                        <center>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


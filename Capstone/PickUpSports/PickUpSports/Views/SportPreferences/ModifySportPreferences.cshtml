@model PickUpSports.Models.ViewModel.CreateSportPreferenceViewModel

@{
    ViewBag.Title = "Add Your Sport Preferences";
}

@using (Html.BeginForm("ModifySportPreferences", "SportPreferences", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="form-box">
                <h2>@Model.ContactUsername's Sport Preferences</h2>
                <div class="well">
                    @Html.HiddenFor(model => model.ContactId)

                    @for (var i = 0; i < Model.SportPreferenceCheckboxes.Count; i++)
                    {
                        <div class="row">
                            <div class="form-group col-md-12">
                                @Html.CheckBoxFor(x => Model.SportPreferenceCheckboxes[i].IsSelected) @Html.DisplayFor(x => Model.SportPreferenceCheckboxes[i].SportName)
                            </div>

                        </div>
                        @Html.HiddenFor(x => Model.SportPreferenceCheckboxes[i].IsSelected)
                        @Html.HiddenFor(x => Model.SportPreferenceCheckboxes[i].SportId)
                    }

                    <div class="row">
                        <center>
                            <button type="submit" class="btn btn-default">Save Changes</button>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model PickUpSports.Models.ViewModel.CreateReviewViewModel
@{
    ViewBag.Title = "Leave a review";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="row">
        <div class="col-md-12">
            @if (ViewData.ModelState.Keys.Contains("NoContact"))
            {
                <div class="container wrapped">
                    <div class="row">
                        <h4>Please login or register to leave a review for this venue</h4>
                        <br />[ @Html.ActionLink("Log In", "Login", "Account") ] | [ @Html.ActionLink("Register", "Register", "Account") ]
                    </div>
                </div>
            }
            else
            {
                @Html.ValidationSummary(false, "Please correct the following errors", new { @class = "text-danger" })
            }
        </div>
    </div>
}
else
{
    <div class="container wrapped">
        <h4><b>Rate and review <i>@Model.VenueName</i></b></h4>

        @using (Html.BeginForm("Create", "Review", FormMethod.Post))
        {
            <form>
                @Html.HiddenFor(model => model.VenueId)
                <div class="row">
                    <div class="form-group col-md-12">
                        <br/>@Html.DisplayNameFor(model => model.Rating):
                        <label class="radio-inline"><input type="radio" value="1" name="Rating">1</label>
                        <label class="radio-inline"><input type="radio" value="2" name="Rating">2</label>
                        <label class="radio-inline"><input type="radio" value="3" name="Rating">3</label>
                        <label class="radio-inline"><input type="radio" value="4" name="Rating">4</label>
                        <label class="radio-inline"><input type="radio" value="5" name="Rating" checked>5</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <br/>@Html.DisplayNameFor(model => model.Comments):
                        @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", rows = 7 })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-3">
                        <button type="submit" class="btn btn-default">Submit Review</button>
                    </div>
                </div>
            </form>
    
        }
    </div>
}
@using PickUpSports.Models.DatabaseModels
@using PickUpSports.Models.ViewModel
@model PickUpSports.Models.ViewModel.FriendInviteViewModel
@{
    ViewBag.Title = "FriendInvite";
}

<h2>Invite a Friend!</h2>

@using (Html.BeginForm("FriendInvite", "Friends", FormMethod.Post))
{
    <select id="friendselect" name="FriendName">
        <option value="0"> Please Select a Friend</option>
        @foreach(ViewFriendsViewModel friend in Model.Friends)
    {
        <Option value="@friend.FriendId">@friend.FriendName</Option>
    }
    </select> 

    <select id="Gameselect" name="GameTitle">
        <option value="0"> Please Select a Game</option>
        @foreach(var game in Model.Games)
        {
            <Option value="@game.GameId">@game.Venue</Option>
        }
    </select> 
       
    <input type="submit" name ="button" value="Send Invite" class="btn btn-default" />
}
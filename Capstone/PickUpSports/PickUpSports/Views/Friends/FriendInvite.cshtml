
@model PickUpSports.Models.ViewModel.FriendInviteViewModel
@{
    ViewBag.Title = "Invite a friend to a Game";
}


@using (Html.BeginForm("FriendInvite", "Friends", FormMethod.Post))
{
<div class="container">
    <div class="row">
        <div class="form-box">
            <h4>Invite a Friend</h4>
            <form role="form" id="game-form">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(false, null, new { @class = "text-danger" })

                        </div>
                    </div>
                }
                
                @Html.HiddenFor(model => model.ContactId)
                @Html.HiddenFor(model => model.GameId)
               
                <!-- Friend field -->
                <div class="form-group" style="padding-top: 20px">
                    @Html.DropDownListFor(
                        x => x.FriendId,
                        new SelectList(ViewBag.Friends, "Key", "Value"),
                        "Select a Friend",
                        new {@class = "form-control"})
                </div>

              

                <div class="form-group">
                    <center>
                        <button type="submit" class="btn btn-default">Add Friend</button>
                    </center>
                </div>

              
            </form>
        </div>
    </div>
</div>
   
}